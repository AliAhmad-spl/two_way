<p id="notice"><%= notice %></p>

<%= link_to 'New Expense', new_expense_path, class: "btn btn-success", style: "color: white;" %>
<%= link_to 'back to home', root_path, class: "btn btn-warning", style: "color: white;" %>

<h1>Expenses</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th>Current sales person name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.description %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.current_sales_person_name %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @orders %>
    </div>
    <%= will_paginate @orders, :container => false %>
</div>
<br>


